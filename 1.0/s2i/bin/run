#!/bin/bash

LOCAL_SOURCE_DIR=${HOME}

if [ -z "$SWARM_JAR" ]; then
  SWARM_JAR="target/*-swarm.jar"
fi

BIND_IP=`ip addr | grep 'state UP' -A2 | tail -n1 | awk '{print $2}' | cut -f1  -d'/'`

exec java -Djboss.bind.address=$BIND_IP -Djboss.http.port=8080 -Djboss.socket.binding.port-offset=0 -jar $LOCAL_SOURCE_DIR/$SWARM_JAR
