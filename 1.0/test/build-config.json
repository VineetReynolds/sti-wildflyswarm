{
  "kind": "BuildConfig",
  "apiVersion": "v1",
  "metadata":{
    "name": "wildflyswarm-10-centos7-build"
  },
  "spec": {
    "triggers": [
      {
        "type": "GitHub",
        "github": {
          "secret": "secret101"
        }
      }
    ],
    "source" : {
      "type" : "Git",
      "git" : {
        "uri": "git://github.com/wildfly-swarm/wildflyswarm-10-centos.git"
      }
    },
    "strategy": {
      "type": "Custom",
      "customStrategy": {
        "from": {
          "kind": "DockerImage",
          "name": "openshift/sti-image-builder"
        },
        "exposeDockerSocket": true,
        "env": [
          {
            "name": "IMAGE_NAME",
            "value": "openshift/wildflyswarm-10-centos7"
          }
        ]
      }
    },
    "output": {
      "to": {
        "kind": "ImageStreamTag",
        "name": "wildflyswarm-10-centos7:latest"
      }
    }
  }
}
